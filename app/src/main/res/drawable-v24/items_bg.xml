<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">


    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:top="5dp" android:left="2dp" android:right="50dp">
                <shape>
                    <solid android:color="#E4D5FF" />
                    <corners android:bottomLeftRadius="5dp"/>
                </shape>
            </item>
            <!-- SHADOW LAYER -->
            <item>
                <shape>
                    <solid android:color="#8E8D8D" />
                    <corners android:bottomLeftRadius="3dp"
                        android:topLeftRadius="3dp"
                        android:topRightRadius="3dp"
                        android:bottomRightRadius="1dp"/>
                </shape>
            </item>


            <!-- CONTENT LAYER -->
            <item android:bottom="2dp"
                android:left="0dp"
                android:right="1dp"
                android:top="0dp">
                <shape>
                    <stroke android:color="#DADADA" android:width="0.8dp"/>
                    <!--<solid android:color="?attr/itemShapeAppearance" />-->
                </shape>
            </item>
        </layer-list>
    </item>


</selector>